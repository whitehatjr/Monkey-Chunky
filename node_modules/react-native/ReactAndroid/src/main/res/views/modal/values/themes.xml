<?xml version="1.0" encoding="utf-8"?>

<resources>

  <style name="ReactAndroidTheme.FullScreenDialog">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="ReactAndroidTheme.FullScreenDialogAnimatedSlide" parent="ReactAndroidTheme.FullScreenDialog">
    <item name="android:windowAnimationStyle">@style/ReactAndroidDialogAnimationSlide</item>
  </style>

  <style name="ReactAndroidTheme.FullScreenDialogAnimatedFade" parent="ReactAndroidTheme.FullScreenDialog">
    <item name="android:windowAnimationStyle">@style/ReactAndroidDialogAnimationFade</item>
  </style>

  <style name="ReactAndroidDialogAnimationSlide">
    <item name="android:windowEnterAnimation">@anim/reactandroid_catalyst_slide_up</item>
    <item name="android:windowExitAnimation">@anim/reactandroid_catalyst_slide_down</item>
  </style>

  <style name="ReactAndroidDialogAnimationFade">
    <item name="android:windowEnterAnimation">@anim/reactandroid_catalyst_fade_in</item>
    <item name="android:windowExitAnimation">@anim/reactandroid_catalyst_fade_out</item>
  </style>



</resources>
