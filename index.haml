!!! 5
-# Manifest file for AppCache
%html
  %head
    -# Title of the app
    %title Monkey Chunky
    -# Meta tag to ensure proper rendering and touch zooming
    %meta(content="width=device-width, initial-scale=1" name='viewport')
    -# Favicon image for the application
    %link(rel='shortcut icon' href='media/favicon.ico')
    -# Add sweet alert css
    %link(rel='stylesheet' type='text/css' href='dist/sweetalert.css')
    -# External CSS stylesheet
    %link(rel='stylesheet' type='text/css' href='style/style.css')
    -# Import Patrick Hand font
    %link(href="https://fonts.googleapis.com/css?family=Patrick+Hand" rel="stylesheet")
    -# Add the jquery library
    %script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
    -# Add the Howler Library
    %script(src='https://cdn.jsdelivr.net/howler.js/2.0.0/howler.js')
    -# Add jQuery autocomplete js library
    %script(src='js/jqueryAutocomplete.js')
    -# Add sweet alert javascript
    %script(src='dist/sweetalert.min.js')
    -# Add external Javascript app file
    %script(src='js/action.js')
  -#Body of the Document
  %body
    %header
      -#Title bar of the Application
      %h1(class='top-bar')  Monkey-Chunky
    -#Container class enclosing the remainder of the application
    .container
      -#datalist for autocomplete feature using html 5
        To be replaced with auto-complete using javascript
      %datalist#options
      -#Form
      %form.form(autocomplete="off")
        -#User enters the text
        %input#word(type='text' list='options')
        -#Button to submit the form
        %button#go-btn(type='Submit') Go
      -#The word and the phonic buttons appear here
      .content
        -#the typed word appears here
        %p.word.js-word
        -#the wrapper for the phonic buttons appear here
        .phonemes.js-phonemes
        -#the buttons
          %button a
          %button b
          %button c
        %div
          -#the image representing the application
          %img.img-responsive(src='media/monkey-chunky.png')

    %footer
